    .row
      .col-sm-4.col-sm-offset-1
        .row
          .col-xs-12
            img.img-responsive.img-circle.jeff-image(src='imgs/jeff.jpg', alt='Me at La tour Eiffel', title='Me at La tour Eiffel')
